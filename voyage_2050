pipeline{
  agent any

  stages {
    stage('Build'){
      steps{
        script{
          echo "Checking de la coque"
          sleep 10
          echo "Integrité de la coque à 100 %"
        }
      }
    }

    stage('Test'){
      steps{
        script{
          echo "Vérification des équipements de navigation"
          sleep 10
          echo "Léger disfonctionnement de la carte numérique"
        }
      }
    }
    
    stage('Deploy'){
      steps{
        script{
          echo "Vérification des équipements de communication"
          sleep 10
          echo "Itest radio OK"
        }
      }
    }

    stage('Embaucher'){
      steps{
        script{
          echo "recherche nouvel ingénieur"
          sleep 10
          echo "Ingénieur trouvé"
        }
      }
    }

    stage('Chargement'){
      steps{
        script{
          echo "Réduire le temps de chargement des listes de vols"
          sleep 10
          echo "Listes réduites"
        }
      }
    }

    stage('Solde'){
      steps{
        script{
          echo "promouvoir les soldes d'été pour Saturne sur la page de confirmation des réservations en première classe."
          sleep 10
          echo "Itest radio OK"
        }
      }
    }
  }
}
