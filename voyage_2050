  agent any

  stages {
    stage('Build'){
      steps{
        script{
          echo "Checking de la coque"
          sleep 10
          echo "Integrité de la coque à 100 %"
        }
      }
    }

    stage('Test'){
      steps{
        script{
          echo "Vérification des équipements de navigation"
          sleep 10
          echo "Léger disfonctionnement de la carte numérique"
        }
      }
    }
    
    stage('Deploy'){
      steps{
        script{
          echo "Vérification des équipements de communication"
          sleep 10
          echo "Itest radio OK"
        }
      }
    }
  }
}
